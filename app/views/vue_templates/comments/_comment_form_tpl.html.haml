%script( type='text/x-template' id='comment-form-tpl' )
  %comment-notification-list(:notifications = 'notifications')

  %div
    %pre(v-show = 'body')
      {{ body }}

  %div(v-if = '!loggedIn')
    Please login bla bla bla template

  = simple_form_for :comment, html: { 'v-on:submit.prevent': 'addComment($event)' } do |f|
    .form-group
      = f.input :body, as: :text, label: false, input_html: { 'v-model': 'body', ':disabled': "!loggedIn", class: 'form-control', rows: 5 }
    .form-group.text-right
      = f.button :submit, class: 'btn btn-success'

  %alert{":show.sync":"showRight", ":duration":"5000", type:"warning", placement:"top-right", "width":"500", dismissable: true}
    %span.icon-ok-circled.alert-icon-float-left
    %strong
      Warning!
    %p
      Please #{ link_to 'Sign In', :login } or #{ link_to 'Sing up', new_user_path } for using our service
