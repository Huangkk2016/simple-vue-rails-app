%script( type='text/x-template' id='comment-form-tpl' )
  %div
    %pre {{ body }}

  = simple_form_for :comment, html: { 'v-on:submit.prevent': 'addComment($event)' } do |f|
    = f.input :body, as: :text, input_html: { 'v-model': 'body' }
    = f.input :post_id, as: :hidden, input_html: { name: 'post_id', value: '{{ postId }}' }
    = f.submit
