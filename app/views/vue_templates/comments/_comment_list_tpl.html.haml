%script( type='text/x-template' id='comment-list-tpl' )
  .comment-item( v-for='comment in comments' track-by='id' )
    %comment( :comment = 'comment' )

    %div(:class = "{nestedComment: comment.treeDepth < maxCommentDepth}")
      %comment-list( :comments = 'comment.children' )

    -# %pre
      {{ $data | json }}
